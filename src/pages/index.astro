  <script is:inline>
    (function(){
      var root = document.currentScript && document.currentScript.parentElement;
      if(!root) root = document.querySelector('#what-we-do');
      if(!root) return;

      var tabsRoot = root.querySelector('[data-wwd]');
      if(!tabsRoot) return;

      var buttons = [].slice.call(tabsRoot.querySelectorAll('[data-tab]'));
      var panels  = [].slice.call(tabsRoot.querySelectorAll('[data-tab-panel]'));

      function activate(name){
        buttons.forEach(function(btn){
          var on = btn.getAttribute('data-tab') === name;
          btn.classList.toggle('is-active', on);
          btn.setAttribute('aria-selected', String(on));
          btn.tabIndex = on ? 0 : -1;
        });
        panels.forEach(function(p){
          var show = p.getAttribute('data-tab-panel') === name;
          p.classList.toggle('hidden', !show);
        });
      }

      buttons.forEach(function(btn){
        btn.addEventListener('click', function(){ activate(btn.getAttribute('data-tab')); });
        btn.addEventListener('keydown', function(e){
          var i = buttons.indexOf(btn);
          if(e.key === 'ArrowDown'){ e.preventDefault(); (buttons[i+1]||buttons[0]).focus(); }
          if(e.key === 'ArrowUp'){ e.preventDefault(); (buttons[i-1]||buttons[buttons.length-1]).focus(); }
        });
      });

      activate('injectables');
    })();
