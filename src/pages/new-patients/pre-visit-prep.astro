---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Pre-visit prep | D\u2011Essence Wellness";
const pageDesc = "Simple steps can improve comfort and results\u2014your provider will tailor instructions to you.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="border-b border-neutral-200/60">
    <div class="max-w-screen-xl mx-auto px-4 py-10 md:py-12">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Pre-visit prep</h1>
      <p class="mt-3 text-lg text-neutral-600 max-w-3xl">Simple steps can improve comfort and resultsâ€”your provider will tailor instructions to you.</p>
    </div>
  </header>

  <section>
    <div class="max-w-screen-xl mx-auto px-4 py-12 md:py-16">
      <div class="max-w-3xl">
        <article class="mb-10"><h2 class="text-xl font-semibold tracking-tight">General tips</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Arrive with clean skin; discuss medications and supplements; plan around social downtime if needed.</p></article>
      </div>
    </div>
  </section>
</SiteLayout>
