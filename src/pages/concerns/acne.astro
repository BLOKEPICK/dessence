---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Acne | D\u2011Essence Wellness";
const pageDesc = "Reduce active breakouts and support clearer skin with gentle, effective protocols.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-8">
    <div class="container mx-auto px-4 max-w-3xl">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Acne</h1>
      <p class="mt-3 text-lg text-neutral-600">Reduce active breakouts and support clearer skin with gentle, effective protocols.</p>
    </div>
  </header>

  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-3xl">
      <article class="mb-8"><h2 class="text-xl font-semibold tracking-tight">Typical options</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Laser (Aerolase), chemical peels, and maintenance skincare; tailor to acne type and sensitivity.</p></article>
    </div>
  </section>
</SiteLayout>
