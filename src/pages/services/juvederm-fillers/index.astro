const risks = {
  title: 'Safety & risks',
  commonTitle: 'Common, temporary effects',
  common: ['Swelling or bruising', 'Tenderness to touch', 'Asymmetry while settling'],
  lessCommonTitle: 'Less common considerations',
  lessCommon: ['Nodules or lumps', 'Vascular events (rare; emergency protocol in place)', 'Allergic reactions (rare)'],
