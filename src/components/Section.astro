---
const { title = '', subtitle = '', id = '', class: cls = '' } = Astro.props;
---
<section id={id} class={`section ${cls}`}>
  <div class="container">
    {title && <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight">{title}</h2>}
    {subtitle && <p class="mt-2 text-muted max-w-2xl">{subtitle}</p>}
    <div class="mt-8"><slot /></div>
  </div>
</section>
