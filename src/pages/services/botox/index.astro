---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const seo = {
  title: 'Botox | D-Essence Wellness',
  description:
    'Subtle, natural-looking softening of frown lines, crow’s feet, and forehead lines using onabotulinumtoxinA. Results in ~3–5 days, full effect at 10–14 days, lasting ~3–4 months.',
  canonical: '/services/botox/',
  type: 'website',
  jsonLd: [
    {
      '@context': 'https://schema.org',
      '@type': 'MedicalProcedure',
      name: 'Botulinum toxin type A (Botox) — Cosmetic',
      alternateName: 'Botox',
      procedureType: 'Non-surgical aesthetic treatment',
      bodyLocation: 'Glabella, forehead, periocular (crow’s feet)',
      howPerformed: 'Microinjections into specific facial muscles',
      preparation: 'Avoid blood-thinning supplements/medications when medically appropriate; arrive with clean skin.',
      followup: 'Review at 10–14 days if needed.',
      estimatedCost: 'Varies by area and units',
      availableService: {
        '@type': 'Service',
        serviceType: 'Cosmetic neurotoxin treatment (onabotulinumtoxinA)',
        provider: {
          '@type': 'HealthAndBeautyBusiness',
          name: 'D-Essence Wellness',
          telephone: '+1-716-303-8963',
          address: {
            '@type': 'PostalAddress',
            streetAddress: '871 Blooming Grove Turnpike Suite 102',
            addressLocality: 'New Windsor',
            addressRegion: 'NY',
            postalCode: '12553',
            addressCountry: 'US'
          }
        }
      }
    },
    {
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        { '@type': 'ListItem', position: 1, name: 'Services', item: 'https://dessencewellness.com/services/' },
        { '@type': 'ListItem', position: 2, name: 'Botox', item: 'https://dessencewellness.com/services/botox/' }
      ]
    }
  ]
};
---

<BaseLayout seo={seo}>
  <!-- ===== HERO (dark, original height, one-line meta) ===== -->
  <section class="bg-neutral-950 text-white">
    <div class="container pt-28 pb-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Una sola línea -->
        <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-white/70">
          <span>Injectables</span>
          <span class="opacity-60">•</span>
          <span>New Windsor, NY</span>
        </div>
        <h1 class="mt-2 text-4xl sm:text-5xl font-semibold tracking-tight">Botox</h1>
        <!-- (Sin descripción en el hero) -->
      </div>
    </div>
  </section>

  <!-- ===== CONTENT INTRO (white, minimal, centered) ===== -->
  <section class="bg-white text-neutral-900">
    <div class="container py-12 sm:py-16">
      <div class="mx-auto max-w-prose text-center">
        <p class="text-neutral-700">
          Botox is a refined approach to softening expression lines—targeting frown lines, crow’s feet, and forehead lines.
          Precise, customizable dosing helps maintain natural expression while smoothing dynamic wrinkles with minimal downtime.
        </p>
      </div>
    </div>
  </section>

  <!-- ===== BEFORE & AFTER (dark, image left, text right) ===== -->
  <section class="relative bg-neutral-950 text-white">
    <div class="container py-12 sm:py-16">
      <!-- Igual en móvil y desktop: dos columnas siempre -->
      <div class="mx-auto max-w-6xl grid grid-cols-2 gap-6 items-center">
        <!-- Imagen izquierda (con zoom on click) -->
        <figure class="relative">
          <!-- Acentos laterales sutiles -->
          <div class="pointer-events-none absolute -left-6 inset-y-6 w-16 rounded-full bg-gradient-to-r from-white/10 to-transparent blur-lg"></div>
          <div class="pointer-events-none absolute -right-6 inset-y-6 w-16 rounded-full bg-gradient-to-l from-white/10 to-transparent blur-lg"></div>

          <img
            id="ba-open"
            src="/IMG_0800.webp"
            alt="Botox before and after"
            loading="eager"
            class="cursor-zoom-in mx-auto w-full max-w-[12rem] sm:max-w-[16rem] md:max-w-[22rem] lg:max-w-[26rem] h-auto rounded-2xl ring-1 ring-white/15 shadow-2xl"
            width="960"
            height="1280"
          />
        </figure>

        <!-- Texto derecha -->
        <div>
          <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">Before &amp; After</h2>
          <p class="mt-3 text-white/80">
            Explore subtle yet meaningful improvements in dynamic lines with dosing tailored to your features.
            Results typically begin in 3–5 days, with full effect around 10–14 days.
          </p>

          <div class="mt-8">
            <!-- Comentario movido fuera del atributo para no romper el botón -->
            <!-- Cambia a /gallery#botox si tienes ancla por tratamiento -->
            <a
              href="/gallery"
              class="inline-flex items-center gap-2 rounded-full border border-white/30 px-6 py-3 text-sm font-medium hover:bg-white hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-white/30"
              aria-label="View Botox gallery"
            >
              <!-- ícono simple -->
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M4 7h16v10H4z" stroke="currentColor" stroke-width="1.6" />
                <path d="M8.5 12.5l2.5 3 3.5-4 4 5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
                <circle cx="8" cy="10" r="1.2" fill="currentColor" />
              </svg>
              View Gallery
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Lightbox / Zoom -->
    <div id="ba-lightbox" class="fixed inset-0 z-50 hidden">
      <div class="absolute inset-0 bg-black/80"></div>
      <div class="relative h-full w-full flex items-center justify-center p-4">
        <img
          src="/Botox-bottle.webp"
          alt="Zoomed Botox image"
          class="max-h-[90vh] max-w-[92vw] rounded-2xl ring-1 ring-white/20 shadow-2xl"
        />
        <button
          id="ba-close"
          class="absolute top-4 right-4 inline-flex items-center justify-center rounded-full bg-white/90 text-neutral-900 h-10 w-10 hover:bg-white focus:outline-none focus:ring-2 focus:ring-white/50"
          aria-label="Close image"
        >
          ✕
        </button>
      </div>
    </div>
  </section>

  <!-- ===== CTA FINAL (white) ===== -->
  <section class="bg-white text-neutral-900">
    <div class="container py-12 sm:py-16">
      <div class="mx-auto max-w-prose text-center">
        <a
          href="https://na02.patientnow.com/a/dessencewellness/OnlineBooking.aspx"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center rounded-full bg-neutral-900 text-white px-6 py-3 text-sm font-medium hover:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-300"
        >
          Book Appointment
        </a>
      </div>
    </div>
  </section>

  <!-- ===== Inline lightbox script ===== -->
  <script is:inline>
    (() => {
      const openEl = document.getElementById('ba-open');
      const lightbox = document.getElementById('ba-lightbox');
      const closeEl = document.getElementById('ba-close');

      if (!openEl || !lightbox || !closeEl) return;

      function show() {
        lightbox.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        window.addEventListener('keydown', onKey);
      }
      function hide() {
        lightbox.classList.add('hidden');
        document.body.style.overflow = '';
        window.removeEventListener('keydown', onKey);
      }
      function onKey(e) { if (e.key === 'Escape') hide(); }

      openEl.addEventListener('click', show);
      closeEl.addEventListener('click', hide);
      lightbox.addEventListener('click', (e) => { if (e.target === lightbox) hide(); });
    })();
  </script>
</BaseLayout>
