---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/faq', label: 'FAQ' },
  { href: '/about', label: 'About' },
];
---
<style is:global>
/* nav dropdown tweaks */
summary::marker { content: ""; }
summary::-webkit-details-marker { display: none; }
details[open] > summary { background-color: rgba(0,0,0,0.06); }
</style>

<header class="sticky top-0 z-50 bg-white/70 backdrop-blur-md border-b border-black/[.06]">
  <div class="container h-16 grid grid-cols-3 items-center">
    <div class="justify-self-start col-start-1">
<a href="/" class="flex items-center" aria-label="D‑Essence Wellness — Home">
      <img src="/logo.webp" alt="D‑Essence Wellness Logo" class="h-10 w-auto" loading="eager" decoding="async" />
    </a>
    </div>
    <nav class="hidden md:flex items-center gap-2 bg-black/[.04] rounded-full p-1 justify-self-center col-start-2">
      <a href="/" class="px-4 h-9 rounded-full flex items-center text-sm hover:bg-black/10 transition">Home</a>
      <details class="relative group">
        <summary class="px-4 h-9 rounded-full flex items-center text-sm cursor-pointer list-none hover:bg-black/10 transition">
          Services
        </summary>
        <ul class="absolute left-1/2 -translate-x-1/2 top-full mt-2 min-w-48 bg-white border border-black/10 rounded-2xl shadow-lg p-2 z-50">
          <li><a class="block px-3 py-2 rounded-lg hover:bg-black/5" href="/services/facials">Facials</a></li>
          <li><a class="block px-3 py-2 rounded-lg hover:bg-black/5" href="/services/laser-hair-removal">Laser Hair Removal</a></li>
          <li><a class="block px-3 py-2 rounded-lg hover:bg-black/5" href="/services/botox">Botox</a></li>
          <li><a class="block px-3 py-2 rounded-lg hover:bg-black/5" href="/services/iv-therapy">IV Therapy</a></li>
        </ul>
      </details>
      <a href="/faq" class="px-4 h-9 rounded-full flex items-center text-sm hover:bg-black/10 transition">FAQ</a>
      <a href="/about" class="px-4 h-9 rounded-full flex items-center text-sm hover:bg-black/10 transition">About</a>
    </nav>
  </div>
</header>
