<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="border-b border-neutral-200/60">
    <div class="max-w-screen-xl mx-auto px-4 py-10 md:py-12">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Concerns</h1>
      <p class="mt-3 text-lg text-neutral-600 max-w-3xl">Explore solutions by goalâ€”find guidance for common concerns and see which treatments are typically recommended.</p>
    </div>
  </header>

  <section>
