---
import PageLayout from '~/layouts/PageLayout.astro';
export const metadata = {
  title: "Skinvive — D-Essence Wellness",
  description: "Microinjections for hydration and smoothness."
};
---

<PageLayout metadata={metadata}>
  <section class="max-w-screen-xl mx-auto px-6 py-14 grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
    <div>
      <p class="text-muted text-sm tracking-wide uppercase">Service</p>
      <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight mt-2">Skinvive</h1>
      <p class="mt-4 text-lg text-muted">Microinjections for hydration and smoothness.</p>
      <div class="mt-6">
        <a href="/contact" class="inline-flex items-center px-5 py-3 rounded-full bg-black text-white font-semibold">Book Consultation</a>
      </div>
      <div class="mt-10 grid gap-6">
        <div>
          <h2 class="text-xl font-semibold">What to expect</h2>
          <ul class="mt-2 grid gap-2">
            <li class="text-sm text-muted">• Personalized assessment and plan</li>
            <li class="text-sm text-muted">• Minimal downtime (varies by case)</li>
            <li class="text-sm text-muted">• Performed by trained professionals</li>
          </ul>
        </div>
        <div class="grid sm:grid-cols-2 gap-3">
          <div class="rounded-2xl border border-default bg-card p-4">
            <div class="text-xs uppercase text-muted">Treatment Time</div>
            <div class="font-semibold mt-1">Varies</div>
          </div>
          <div class="rounded-2xl border border-default bg-card p-4">
            <div class="text-xs uppercase text-muted">Sessions</div>
            <div class="font-semibold mt-1">Personalized plan</div>
          </div>
          <div class="rounded-2xl border border-default bg-card p-4">
            <div class="text-xs uppercase text-muted">Downtime</div>
            <div class="font-semibold mt-1">None to mild</div>
          </div>
          <div class="rounded-2xl border border-default bg-card p-4">
            <div class="text-xs uppercase text-muted">Results</div>
            <div class="font-semibold mt-1">Progressive over weeks</div>
          </div>
        </div>
      </div>
    </div>
    <div class="relative">
      <img src="/assets/images/services/skinvive.jpg" alt="Skinvive" class="w-full rounded-3xl border border-default shadow-sm object-cover" loading="lazy" />
    </div>
  </section>

  <section class="max-w-screen-xl mx-auto px-6 pb-10">
    <div class="text-xs text-muted">* Educational content only. Not medical advice. Individual results may vary.</div>
  </section>
</PageLayout>
