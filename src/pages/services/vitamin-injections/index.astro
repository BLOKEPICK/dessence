const seo = {
  title: 'Vitamin Injections | D-Essence Wellness',
  description:
    'Customized vitamin injections to boost energy, strengthen immunity, and support overall wellness. Options include Glutathione, MIC + B12, Lipo-Stat, Tri-Immune Boost, Riposte Plus, B12 Boost, and Vita Complex.',
  canonical: '/services/vitamin-injections/',
  type: 'website',
  jsonLd: [
    {
      '@context': 'https://schema.org',
      '@type': 'Service',
      name: 'Vitamin Injections',
      serviceType: 'Wellness Injection Therapy',
      description:
        'Targeted intramuscular vitamin injections for energy, immunity, recovery, and skin clarity.',
      areaServed: 'Hudson Valley, NY',
      provider: {
        '@type': 'HealthAndBeautyBusiness',
        name: 'D-Essence Wellness',
        telephone: '+1-716-303-8963',
        address: {
          '@type': 'PostalAddress',
          streetAddress: '871 Blooming Grove Turnpike Suite 102',
          addressLocality: 'New Windsor',
          addressRegion: 'NY',
          postalCode: '12553',
          addressCountry: 'US'
        }
      },
      url: 'https://dessencewellness.com/services/vitamin-injections/'
    },
    {
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        { '@type': 'ListItem', position: 1, name: 'Services', item: 'https://dessencewellness.com/services/' },
        { '@type': 'ListItem', position: 2, name: 'Vitamin Injections', item: 'https://dessencewellness.com/services/vitamin-injections/' }
      ]
    }
  ]
};
---

<BaseLayout seo={seo}>
  <!-- Preload shared image (placeholder; replace later) -->
  <link
    rel="preload"
    as="image"
    href="/IMG_0800.webp"
    imagesrcset="/IMG_0800.webp 1x, /IMG_0800.webp 2x"
    imagesizes="(min-width: 1024px) 480px, 64vw"
  />

  <!-- ===== HERO (dark) ===== -->
  <section class="bg-neutral-950 text-white">
    <div class="container pt-28 pb-12">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-white/70">
          <span>Wellness</span>
          <span class="opacity-60">•</span>
          <span>New Windsor, NY</span>
        </div>

        <h1 class="mt-2 text-4xl sm:text-5xl font-semibold tracking-tight">Vitamin Injections</h1>
        <div class="mt-4 h-px w-28 mx-auto bg-gradient-to-r from-transparent via-white to-transparent"></div>
      </div>
    </div>
  </section>

  <!-- ===== MAIN (2 cols) ===== -->
  <section class="relative bg-white text-neutral-900">
    <div class="container py-14 sm:py-[4.5rem]">
      <div class="mx-auto max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-10 items-center">
        <!-- Image (placeholder; replace later) -->
        <figure class="relative">
          <div class="pointer-events-none absolute -left-6 inset-y-6 w-16 rounded-full bg-gradient-to-r from-neutral-200 to-transparent blur-lg"></div>
          <div class="pointer-events-none absolute -right-6 inset-y-6 w-16 rounded-full bg-gradient-to-l from-neutral-200 to-transparent blur-lg"></div>

          <picture>
            <!-- <source srcset="/IMG_0800.avif" type="image/avif" /> -->
            <source srcset="/IMG_0800.webp" type="image/webp" />
            <img
              id="ba-open"
              src="/IMG_0800.webp"
              alt="Vitamin injections at D-Essence Wellness"
              fetchpriority="high"
              decoding="async"
              sizes="(min-width: 1024px) 480px, (min-width: 640px) 60vw, 92vw"
              class="cursor-zoom-in mx-auto w-full max-w-[12rem] sm:max-w-[16rem] md:max-w-[22rem] lg:max-w-[26rem] h-auto rounded-2xl ring-1 ring-neutral-200 shadow-2xl bg-neutral-100"
              width="960"
              height="1280"
              onerror="this.onerror=null; this.src='/placeholder-service.jpg';"
            />
          </picture>
        </figure>

        <!-- Copy + CTAs -->
        <div>
          <p class="text-neutral-700/90">
            Boost your energy, strengthen your immune system, and support overall wellness with customized vitamin injections.
            Each formulation is designed to deliver essential nutrients directly into the muscle for faster absorption and lasting results.
          </p>

          <!-- Available injections -->
          <div class="mt-6 rounded-2xl bg-white ring-1 ring-neutral-200 p-5">
            <h2 class="text-lg font-medium">Available Injections</h2>
            <ul class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-neutral-800">
              {[
                ['Glutathione', 'A potent antioxidant that helps brighten skin, detoxify the body, and protect against cellular damage.'],
                ['MIC + B12', 'Supports metabolism, energy, and focus while aiding fat conversion.'],
                ['Lipo-Stat', 'Targeted blend to enhance fat metabolism, boost energy, and promote liver health.'],
                ['Tri-Immune Boost', 'Vitamin C, zinc, and glutathione to strengthen defense and support healing.'],
                ['Riposte Plus', 'Formulated to improve recovery, reduce inflammation, and support immunity under stress.'],
                ['B12 Boost', 'Improves stamina, focus, and mood; supports healthy red blood cell production.'],
                ['Vita Complex', 'Comprehensive B-vitamin mix for energy, metabolism, and healthy cell function.']
              ].map(([name, desc]) => (
                <li class="inline-flex items-start gap-2">
                  <svg class="w-4 h-4 mt-0.5" viewBox="0 0 24 24" fill="none">
                    <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                  <span><span class="font-medium">{name}</span> — {desc}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Benefits -->
          <div class="mt-6 grid sm:grid-cols-2 gap-4">
            {[
              ['Boosts energy & metabolism', 'Feel more focused and energized throughout your day.'],
              ['Strengthens immune defense', 'Backed by nutrients that support your natural defenses.'],
              ['Supports recovery & balance', 'Helpful during stress, training, or busy seasons.'],
              ['Promotes skin clarity & detox', 'Antioxidant support for glow and cellular protection.']
            ].map(([title, text]) => (
              <div class="rounded-2xl bg-white ring-1 ring-neutral-200 p-5">
                <div class="text-sm font-medium text-neutral-900">{title}</div>
                <p class="mt-2 text-sm text-neutral-700">{text}</p>
              </div>
            ))}
          </div>

          <!-- Details -->
          <div class="mt-6 grid gap-3 text-sm text-neutral-800">
            <div><span class="font-medium text-neutral-900">Treatment time:</span> Quick and convenient — usually under 10 minutes.</div>
            <div>
              <span class="font-medium text-neutral-900">Safety:</span> All injections are administered by licensed medical professionals using sterile technique and
              premium ingredients from trusted compounding pharmacies. Each treatment is customized to your wellness goals.
            </div>
          </div>

          <div class="mt-8 flex items-center gap-4">
            <a
              href="https://na02.patientnow.com/a/dessencewellness/OnlineBooking.aspx"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center rounded-full bg-neutral-900 text-white px-6 py-3 text-sm font-medium hover:bg-neutral-800 active:bg-neutral-900/90 focus:outline-none focus:ring-2 focus:ring-neutral-300"
              aria-label="Book a Vitamin Injections appointment"
            >
              Book Appointment
            </a>

            <a href="/contact-us" class="text-sm text-neutral-600 hover:text-neutral-900 underline-offset-4 hover:underline">
              Questions before booking?
            </a>
          </div>

          <p class="mt-6 text-sm text-neutral-500">Targeted nourishment. Real energy. Inner balance.</p>
        </div>
      </div>
    </div>

    <!-- Lightbox / Zoom -->
    <div
      id="ba-lightbox"
      class="fixed inset-0 z-50 hidden opacity-0 transition-opacity duration-150"
      role="dialog"
      aria-modal="true"
      aria-labelledby="lb-title"
      aria-describedby="lb-desc"
    >
      <div class="absolute inset-0 bg-black/80"></div>
      <div class="relative h-full w-full flex items-center justify-center p-4">
        <h2 id="lb-title" class="sr-only">Zoomed image</h2>
        <p id="lb-desc" class="sr-only">Press Escape or the close button to exit.</p>

        <picture>
          <!-- <source srcset="/IMG_0800.avif" type="image/avif" /> -->
          <source srcset="/IMG_0800.webp" type="image/webp" />
          <img
            src="/IMG_0800.webp"
            alt="Zoomed illustrative image for Vitamin Injections"
            class="max-h-[90vh] max-w-[92vw] rounded-2xl ring-1 ring-white/20 shadow-2xl"
          />
        </picture>

        <button
          id="ba-close"
          class="absolute top-4 right-4 inline-flex items-center justify-center rounded-full bg-white/90 text-neutral-900 h-10 w-10 hover:bg-white focus:outline-none focus:ring-2 focus:ring-white/50"
          aria-label="Close image"
          title="Close"
        >
          ✕
        </button>
      </div>
    </div>
  </section>

  <!-- Lightbox script -->
  <script is:inline>
    (() => {
      const openEl = document.getElementById('ba-open');
      const lightbox = document.getElementById('ba-lightbox');
      const closeEl = document.getElementById('ba-close');

      if (!openEl || !lightbox || !closeEl) return;

      let lastFocused = null;

      function show() {
        lastFocused = document.activeElement;
        lightbox.classList.remove('hidden');
        requestAnimationFrame(() => {
          lightbox.classList.remove('opacity-0');
          lightbox.classList.add('opacity-100');
        });

        document.body.style.overflow = 'hidden';
        document.addEventListener('keydown', onKey);
        setTimeout(() => closeEl.focus(), 0);
      }

      function hide() {
        lightbox.classList.add('opacity-0');
        lightbox.classList.remove('opacity-100');
        setTimeout(() => {
          lightbox.classList.add('hidden');
        }, 150);

        document.body.style.overflow = '';
        document.removeEventListener('keydown', onKey);
        if (lastFocused && typeof lastFocused.focus === 'function') {
          lastFocused.focus();
        }
      }

      function onKey(e) {
        if (e.key === 'Escape') hide();
        if (e.key === 'Tab') {
          e.preventDefault();
          closeEl.focus();
        }
      }

      openEl.addEventListener('click', show);
      closeEl.addEventListener('click', hide);
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) hide();
      });
    })();
  </script>
</BaseLayout>
