---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Section from '@/components/Section.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import { getCollection } from 'astro:content';
const entries = await getCollection('services');
const seo = {
  title: 'Aesthetic & Wellness Treatments | D-Essence Wellness',
  description: 'Neurotoxins, Juvederm, PRP, Skinvive, PDO Threads, Microneedling, Aerolase, Chemical Peels, Facials, Waxing, and more.',
  canonical: '/services',
  type: 'website',
  jsonLd: [{
    "@context":"https://schema.org",
    "@type":"BreadcrumbList",
    "itemListElement":[ {"@type":"ListItem","position":1,"name":"Services","item":"/services"} ]
  }]
};
---
<BaseLayout seo={seo}>
  <Section title="Services" subtitle="A structured approach to skin health and refined aesthetics.">
    <div class="grid-cards">
      {entries.map(e => <ServiceCard href={`/services/${e.data.slug}`} title={e.data.title} summary={e.data.summary} />)}
    </div>
  </Section>
</BaseLayout>
