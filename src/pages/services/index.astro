---
import SiteLayout from "@/layouts/SiteLayout.astro";
const cats = [
  {
    name: "Injectables",
    items: [
      { title: "Neurotoxins", href: "/services/neurotoxins" },
      { title: "Juvederm Fillers", href: "/services/juvederm-fillers" },
      { title: "Skinvive", href: "/services/skinvive" },
      { title: "Nefertiti Neck", href: "/services/nefertiti-neck" },
      { title: "Filler Dissolving", href: "/services/filler-dissolving" },
      { title: "Vitamin Injections", href: "/services/vitamin-injections" },
    ]
  },
  {
    name: "Skin & Laser",
    items: [
      { title: "Aerolase", href: "/services/aerolase" },
      { title: "Chemical Peels", href: "/services/chemical-peels" },
      { title: "Microneedling", href: "/services/microneedling" },
      { title: "Facials", href: "/services/facials" },
      { title: "Skincare Consults", href: "/services/skincare" },
    ]
  },
  {
    name: "Smile & Wellness",
    items: [
      { title: "Teeth Whitening", href: "/services/teeth-whitening" },
      { title: "Waxing", href: "/services/waxing" }
    ]
  }
];
const pageTitle = "Services | D‑Essence Wellness";
const pageDesc = "Explore injectables, skin & laser, and wellness services. Evidence‑based treatments built around your goals and timeline.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-10">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <p class="text-sm tracking-wide uppercase text-neutral-500">What we do</p>
        <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Services</h1>
        <p class="mt-3 text-lg text-neutral-600">Evidence‑based care with a calm, clinical approach. Explore by category.</p>
      </div>
    </div>
  </header>

  <section class="pb-20">
    <div class="container mx-auto px-4 grid md:grid-cols-3 gap-6">
      {cats.map((cat) => (
        <div class="rounded-2xl border border-black/10 bg-white p-6 shadow-sm">
          <h2 class="text-base font-semibold tracking-wide">{cat.name}</h2>
          <ul class="mt-4 space-y-2 text-[15px]">
            {cat.items.map((it) => (
              <li><a href={it.href} class="group inline-flex items-center gap-2 hover:underline decoration-black/30">
                <span>{it.title}</span>
                <svg class="opacity-60 group-hover:opacity-100" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M7 17L17 7" stroke-width="1.6" stroke-linecap="round"/>
                  <path d="M8 7h9v9" stroke-width="1.6" stroke-linecap="round"/>
                </svg>
              </a></li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</SiteLayout>
