---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const seo = {
  title: 'BioRePeel | D-Essence Wellness',
  description:
    'No-downtime, bi-phasic peel that exfoliates, hydrates, and revitalizes without visible peeling. Safe for all skin types year-round; ideal for dull, congested, or acne-prone skin.',
  canonical: '/services/biorepeel/',
  type: 'website',
  jsonLd: [
    {
      '@context': 'https://schema.org',
      '@type': 'Service',
      name: 'BioRePeel',
      serviceType: 'Chemical Peel',
      description:
        'A bi-phasic peel that resurfaces, hydrates, and brightens with no visible peeling or downtime. Suitable for all skin types and seasons.',
      areaServed: 'Hudson Valley, NY',
      provider: {
        '@type': 'HealthAndBeautyBusiness',
        name: 'D-Essence Wellness',
        telephone: '+1-716-303-8963',
        address: {
          '@type': 'PostalAddress',
          streetAddress: '871 Blooming Grove Turnpike Suite 102',
          addressLocality: 'New Windsor',
          addressRegion: 'NY',
          postalCode: '12553',
          addressCountry: 'US'
        }
      },
      url: 'https://dessencewellness.com/services/biorepeel/'
    },
    {
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        { '@type': 'ListItem', position: 1, name: 'Services', item: 'https://dessencewellness.com/services/' },
        { '@type': 'ListItem', position: 2, name: 'BioRePeel', item: 'https://dessencewellness.com/services/biorepeel/' }
      ]
    }
  ]
};
---

<BaseLayout seo={seo}>
  <!-- Preload shared image (replace later as needed) -->
  <link
    rel="preload"
    as="image"
    href="/biorepeel.webp"
    imagesrcset="/biorepeel.webp 1x, /biorepeel.webp 2x"
    imagesizes="(min-width: 1024px) 480px, 64vw"
  />

  <!-- ===== HERO (dark) ===== -->
  <section class="bg-neutral-950 text-white">
    <div class="container pt-28 pb-12">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-white/70">
          <span>Chemical Peel</span>
          <span class="opacity-60">•</span>
          <span>New Windsor, NY</span>
        </div>

        <h1 class="mt-2 text-4xl sm:text-5xl font-semibold tracking-tight">BioRePeel</h1>
        <div class="mt-4 h-px w-28 mx-auto bg-gradient-to-r from-transparent via-white to-transparent"></div>
      </div>
    </div>
  </section>

  <!-- ===== MAIN (2 cols) ===== -->
  <section class="relative bg-white text-neutral-900">
    <div class="container py-14 sm:py-[4.5rem]">
      <div class="mx-auto max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-10 items-center">
        <!-- Image -->
        <figure class="relative">
          <div class="pointer-events-none absolute -left-6 inset-y-6 w-16 rounded-full bg-gradient-to-r from-neutral-200 to-transparent blur-lg"></div>
          <div class="pointer-events-none absolute -right-6 inset-y-6 w-16 rounded-full bg-gradient-to-l from-neutral-200 to-transparent blur-lg"></div>

          <picture>
            <!-- <source srcset="/biorepeel.avif" type="image/avif" /> -->
            <source srcset="/biorepeel.webp" type="image/webp" />
            <img
              id="ba-open"
              src="/biorepeel.webp"
              alt="BioRePeel treatment at D-Essence Wellness"
              fetchpriority="high"
              decoding="async"
              sizes="(min-width: 1024px) 480px, (min-width: 640px) 60vw, 92vw"
              class="cursor-zoom-in mx-auto w-full max-w-[12rem] sm:max-w-[16rem] md:max-w-[22rem] lg:max-w-[26rem] h-auto rounded-2xl ring-1 ring-neutral-200 shadow-2xl bg-neutral-100"
              width="960"
              height="1280"
              onerror="this.onerror=null; this.src='/placeholder-service.jpg';"
            />
          </picture>
        </figure>

        <!-- Copy + CTAs -->
        <div>
          <p class="text-neutral-700/90">
            A no-downtime, bi-phasic peel that exfoliates, hydrates, and revitalizes the skin without visible peeling.
            Ideal for dull, congested, or acne-prone skin and safe for all skin types year-round.
          </p>

          <!-- Key Ingredients -->
          <div class="mt-6 rounded-2xl bg-white ring-1 ring-neutral-200 p-5">
            <h2 class="text-lg font-medium">Key Ingredients</h2>
            <p class="mt-2 text-sm text-neutral-800">
              <span class="font-medium">35% TCA</span>, amino acids, vitamins, and <span class="font-medium">GABA</span> — a targeted blend
              that smooths texture, brightens tone, and supports collagen renewal.
            </p>
          </div>

          <!-- Benefits -->
          <div class="mt-6 grid sm:grid-cols-2 gap-4">
            {[
              ['Refines texture & radiance', 'Smoother feel and a healthy glow.'],
              ['Reduces acne & congestion', 'Helps clear pores and balance oil.'],
              ['Brightens dull, uneven skin', 'Improves overall tone and clarity.'],
              ['No visible peeling or downtime', 'Return to normal activities immediately.']
            ].map(([title, text]) => (
              <div class="rounded-2xl bg-white ring-1 ring-neutral-200 p-5">
                <div class="text-sm font-medium text-neutral-900">{title}</div>
                <p class="mt-2 text-sm text-neutral-700">{text}</p>
              </div>
            ))}
          </div>

          <!-- Details -->
          <div class="mt-6 grid gap-3 text-sm text-neutral-800">
            <div>
              <span class="font-medium text-neutral-900">Recommended frequency:</span> Every 2–3 weeks in a series of 4–6
              treatments, then maintenance every few months.
            </div>
            <div>
              <span class="font-medium text-neutral-900">Downtime:</span> None. Mild redness may occur for a few hours; normal
              activities can resume immediately.
            </div>
            <div>
              <span class="font-medium text-neutral-900">Safety:</span> Non-photosensitizing and gentle enough for all seasons.
              Each treatment is customized to your skin’s needs for maximum safety and comfort.
            </div>
          </div>

          <div class="mt-8 flex items-center gap-4">
            <a
              href="https://na02.patientnow.com/a/dessencewellness/OnlineBooking.aspx"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center rounded-full bg-neutral-900 text-white px-6 py-3 text-sm font-medium hover:bg-neutral-800 active:bg-neutral-900/90 focus:outline-none focus:ring-2 focus:ring-neutral-300"
              aria-label="Book a BioRePeel appointment"
            >
              Book Appointment
            </a>

            <a href="/contact-us" class="text-sm text-neutral-600 hover:text-neutral-900 underline-offset-4 hover:underline">
              Questions before booking?
            </a>
          </div>

          <p class="mt-6 text-sm text-neutral-500">Hydrated. Smooth. Radiant skin—instantly.</p>
        </div>
      </div>
    </div>

    <!-- Lightbox / Zoom -->
    <div
      id="ba-lightbox"
      class="fixed inset-0 z-50 hidden opacity-0 transition-opacity duration-150"
      role="dialog"
      aria-modal="true"
      aria-labelledby="lb-title"
      aria-describedby="lb-desc"
    >
      <div class="absolute inset-0 bg-black/80"></div>
      <div class="relative h-full w-full flex items-center justify-center p-4">
        <h2 id="lb-title" class="sr-only">Zoomed image</h2>
        <p id="lb-desc" class="sr-only">Press Escape or the close button to exit.</p>

        <picture>
          <!-- <source srcset="/biorepeel.avif" type="image/avif" /> -->
          <source srcset="/biorepeel.webp" type="image/webp" />
          <img
            src="/biorepeel.webp"
            alt="Zoomed illustrative image for BioRePeel"
            class="max-h-[90vh] max-w-[92vw] rounded-2xl ring-1 ring-white/20 shadow-2xl"
          />
        </picture>

        <button
          id="ba-close"
          class="absolute top-4 right-4 inline-flex items-center justify-center rounded-full bg-white/90 text-neutral-900 h-10 w-10 hover:bg-white focus:outline-none focus:ring-2 focus:ring-white/50"
          aria-label="Close image"
          title="Close"
        >
          ✕
        </button>
      </div>
    </div>
  </section>

  <!-- Lightbox script -->
  <script is:inline>
    (() => {
      const openEl = document.getElementById('ba-open');
      const lightbox = document.getElementById('ba-lightbox');
      const closeEl = document.getElementById('ba-close');

      if (!openEl || !lightbox || !closeEl) return;

      let lastFocused = null;

      function show() {
        lastFocused = document.activeElement;
        lightbox.classList.remove('hidden');
        requestAnimationFrame(() => {
          lightbox.classList.remove('opacity-0');
          lightbox.classList.add('opacity-100');
        });

        document.body.style.overflow = 'hidden';
        document.addEventListener('keydown', onKey);
        setTimeout(() => closeEl.focus(), 0);
      }

      function hide() {
        lightbox.classList.add('opacity-0');
        lightbox.classList.remove('opacity-100');
        setTimeout(() => {
          lightbox.classList.add('hidden');
        }, 150);

        document.body.style.overflow = '';
        document.removeEventListener('keydown', onKey);
        if (lastFocused && typeof lastFocused.focus === 'function') {
          lastFocused.focus();
        }
      }

      function onKey(e) {
        if (e.key === 'Escape') hide();
        if (e.key === 'Tab') {
          e.preventDefault();
          closeEl.focus();
        }
      }

      openEl.addEventListener('click', show);
      closeEl.addEventListener('click', hide);
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) hide();
      });
    })();
  </script>
</BaseLayout>
