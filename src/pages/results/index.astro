---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Results (Before & After) | D\u2011Essence Wellness";
const pageDesc = "Explore subtle, natural outcomes. Our gallery reflects real, individual results.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="border-b border-neutral-200/60">
    <div class="max-w-screen-xl mx-auto px-4 py-10 md:py-12">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Results (Before & After)</h1>
      <p class="mt-3 text-lg text-neutral-600 max-w-3xl">Explore subtle, natural outcomes. Our gallery reflects real, individual results.</p>
    </div>
  </header>

  <section>
    <div class="max-w-screen-xl mx-auto px-4 py-12 md:py-16">
      <div class="max-w-3xl">
        <article class="mb-10"><h2 class="text-xl font-semibold tracking-tight">How we present results</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Photos are standardized where possible. Lighting, angles, and timelines may vary. Individual results differ.</p></article>
      </div>
    </div>
  </section>
</SiteLayout>
