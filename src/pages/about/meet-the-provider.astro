---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Meet the provider | D\u2011Essence Wellness";
const pageDesc = "Professional background, training, and values that guide our patient care.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-8">
    <div class="container mx-auto px-4 max-w-3xl">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Meet the provider</h1>
      <p class="mt-3 text-lg text-neutral-600">Professional background, training, and values that guide our patient care.</p>
    </div>
  </header>

  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-3xl">
      <article class="mb-8"><h2 class="text-xl font-semibold tracking-tight">Overview</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Add credentials, affiliations, and continuing education highlights here.</p></article>
    </div>
  </section>
</SiteLayout>
