---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const services = [
  { name: 'Botox', url: '/services/botox/' },
  { name: 'Xeomin', url: '/services/xeomin/' },
  { name: 'Daxxify', url: '/services/daxxify/' },
  { name: 'Botox for Hyperhidrosis', url: '/services/botox-for-hyperhidrosis/' },
  { name: 'Juvederm Fillers', url: '/services/juvederm-fillers/' },
  { name: 'PRP Microneedling', url: '/services/prp-microneedling/' },
  { name: 'PRF Microneedling', url: '/services/prf-microneedling/' },
  { name: 'Smooth Threads', url: '/services/smooth-threads/' },
];

const seo = {
  title: 'Injectables | D-Essence Wellness',
  description:
    'Neuromodulators (Botox, Xeomin, Daxxify), Juvederm fillers, PRP/PRF microneedling, and Smooth Threads—conservative dosing and undetectable finishes.',
  canonical: '/services/injectables/',
  type: 'website',
  jsonLd: [
    {
      '@context': 'https://schema.org',
      '@type': 'ItemList',
      name: 'Injectables at D-Essence Wellness',
      itemListElement: services.map((s, i) => ({
        '@type': 'ListItem',
        position: i + 1,
        name: s.name,
        url: `https://dessencewellness.com${s.url}`,
      })),
    },
  ],
};
---

<BaseLayout seo={seo}>
  <!-- ===== HERO (dark) ===== -->
  <section class="bg-neutral-950 text-white">
    <div class="container pt-28 pb-14 sm:pb-16">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-white/60">
          <span>Services</span><span class="opacity-40">•</span><span>Injectables</span>
        </div>
        <h1 class="mt-2 text-3xl sm:text-4xl font-semibold tracking-tight">
          Injectables
        </h1>
        <p class="mt-4 text-white/80">
          Subtle refinement with clinical restraint. We prioritize balance, longevity, and skin health—so results
          look like you, simply more rested.
        </p>

        <!-- chips -->
        <div class="mt-5 flex flex-wrap gap-2">
          {[
            'Conservative dosing',
            'Undetectable finish',
            'FDA-approved products',
            'Provider-led care',
          ].map((c) => (
            <span class="inline-flex items-center rounded-full border border-white/20 bg-white/5 px-3 py-1.5 text-[12px] text-white/80">
              {c}
            </span>
          ))}
        </div>

        <!-- quick nav -->
        <nav aria-label="Category quick-nav"
             class="mt-6 flex gap-2 overflow-x-auto [-ms-overflow-style:none] [scrollbar-width:none]">
          {[
            { id: 'neuromodulators', label: 'Neuromodulators' },
            { id: 'fillers', label: 'Dermal Fillers' },
            { id: 'threads', label: 'Threads' },
            { id: 'prp-prf', label: 'PRP / PRF' },
          ].map(link => (
            <a href={`#${link.id}`}
               class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-3 py-1.5 text-sm text-white hover:bg-white/15 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/30">
              {link.label}
            </a>
          ))}
        </nav>
      </div>
    </div>
  </section>

  <!-- ===== CONTENT (white) ===== -->
  <div class="bg-white text-neutral-900">
    <!-- Neuromodulators -->
