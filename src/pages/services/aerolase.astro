const title = "Aerolase\u00ae Laser";
const subtitle = "Clearer, calmer skin with minimal downtime.";
const intro = "Advanced laser technology designed to address redness, discoloration, acne, and overall clarity with minimal discomfort.";
const highlights = ["Targets redness & pigmentation", "Well\u2011tolerated, versatile settings", "Pairs with skincare protocols"];
const idealFor = ["Redness, pigmentation, acne, overall clarity"];
