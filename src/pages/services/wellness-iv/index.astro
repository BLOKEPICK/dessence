---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const seo = {
  title: 'Wellness & IV | D-Essence Wellness',
  description:
    'Targeted vitamin injections (B12, MICC, Lipo Plus, L-Carnitine, Amino Blend, Glutathione, Tri-Immune) and IV infusions for Energy, Immunity, Hydration, and Wellness.',
  canonical: '/services/wellness-iv/',
  type: 'website',
  jsonLd: [
    {
      '@context': 'https://schema.org',
      '@type': 'HealthAndBeautyBusiness',
      name: 'D-Essence Wellness',
      url: 'https://dessencewellness.com/services/wellness-iv/',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '871 Blooming Grove Turnpike Suite 102',
        addressLocality: 'New Windsor',
        addressRegion: 'NY',
        postalCode: '12553',
        addressCountry: 'US'
      },
      makesOffer: [
        { '@type': 'Service', name: 'IV Infusions — Energy' },
        { '@type': 'Service', name: 'IV Infusions — Immunity' },
        { '@type': 'Service', name: 'IV Infusions — Hydration' },
        { '@type': 'Service', name: 'IV Infusions — Wellness' },
        { '@type': 'Service', name: 'Vitamin Injection — B12 (Methylcobalamin)' },
        { '@type': 'Service', name: 'Vitamin Injection — MICC' },
        { '@type': 'Service', name: 'Vitamin Injection — Lipo Plus' },
        { '@type': 'Service', name: 'Vitamin Injection — L-Carnitine' },
        { '@type': 'Service', name: 'Vitamin Injection — Amino Blend' },
        { '@type': 'Service', name: 'Vitamin Injection — Glutathione' },
        { '@type': 'Service', name: 'Vitamin Injection — Tri-Immune Boost' }
      ]
    }
  ]
};
---

<BaseLayout seo={seo}>
  <!-- ===== HERO (dark) ===== -->
  <section class="bg-neutral-950 text-white">
    <div class="container pt-28 pb-14 sm:pb-16">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-white/60">
          <span>Services</span><span class="opacity-40">•</span><span>Wellness &amp; IV</span>
        </div>
        <h1 class="mt-2 text-3xl sm:text-4xl font-semibold tracking-tight">Wellness &amp; IV Therapy</h1>
        <p class="mt-4 text-white/80">
          Targeted vitamin injections and IV infusions designed to support energy, immunity, hydration,
          recovery and overall wellness—delivered with nurse-led protocols.
        </p>

        <!-- Quick-nav -->
        <nav aria-label="Category quick-nav"
             class="mt-6 flex gap-2 overflow-x-auto [-ms-overflow-style:none] [scrollbar-width:none]">
          {[
            { id: 'iv-infusions', label: 'IV Infusions' },
            { id: 'vitamin-injections', label: 'Vitamin Injections' },
          ].map(link => (
            <a href={`#${link.id}`}
               class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-3 py-1.5 text-sm text-white hover:bg-white/15 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/30">
              {link.label}
            </a>
          ))}
        </nav>
      </div>
    </div>
  </section>

  <!-- ===== CONTENT (white) ===== -->
  <div class="bg-white text-neutral-900">
    <!-- IV INFUSIONS -->
    <section id="iv-infusions" class="scroll-mt-28 py-12 sm:py-14">
      <div class="container">
        <div class="grid md:grid-cols-12 gap-8 items-start">
          <div class="md:col-span-5">
            <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">IV Infusions</h2>
            <p class="mt-3 text-neutral-700">
              Balanced fluids, electrolytes and vitamins delivered intravenously for rapid uptake.
              We tailor add-ons and cadence to your goals and health history.
            </p>
            <ul class="mt-5 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-neutral-700">
              {[
                'Energy • performance support',
                'Immunity • travel prep',
                'Hydration • recovery',
                'General wellness & glow',
                'Nurse-led sterile technique',
                'Brief visit, minimal downtime',
              ].map(item => (
                <li class="inline-flex items-center gap-2">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none"><path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="md:col-span-7">
            <div class="grid sm:grid-cols-2 gap-4">
              {[
                { title: 'Energy', desc: 'B-vitamins and support for fatigue & busy weeks.' },
                { title: 'Immunity', desc: 'Vitamin C + zinc–focused defense support.' },
                { title: 'Hydration', desc: 'Fluids & electrolytes for rehydration.' },
                { title: 'Wellness', desc: 'Balanced cocktail for overall vitality.' },
              ].map(card => (
                <a href="/contact-us/" class="group rounded-2xl bg-white ring-1 ring-neutral-200 p-5 hover:shadow-md hover:-translate-y-0.5 transition">
                  <div class="flex items-center gap-3">
                    <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-neutral-100 ring-1 ring-neutral-200">
                      <svg viewBox="0 0 24 24" class="w-5 h-5" fill="none"><path d="M7 3h10l1 3H6l1-3zM7 21h10M6 14h12" stroke="currentColor" stroke-width="1.5"/></svg>
                    </span>
                    <div>
                      <h3 class="font-medium text-neutral-900">{card.title}</h3>
                      <p class="mt-1 text-sm text-neutral-600">{card.desc}</p>
                    </div>
                  </div>
                  <div class="mt-3 text-sm underline underline-offset-4 decoration-neutral-300 text-neutral-800 group-hover:decoration-neutral-700">Request consult →</div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="container"><div class="h-px bg-neutral-200"></div></div>

    <!-- VITAMIN INJECTIONS -->
    <section id="vitamin-injections" class="scroll-mt-28 py-12 sm:py-14">
      <div class="container">
        <div class="grid md:grid-cols-12 gap-8 items-start">
          <div class="md:col-span-5">
            <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">Vitamin Injections</h2>
            <p class="mt-3 text-neutral-700">
              Single-dose intramuscular shots for targeted benefits. We’ll help select the right option
              and outline a reasonable cadence.
            </p>
            <ul class="mt-5 grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm text-neutral-700">
              {[
                'B12 (methylcobalamin) — energy',
                'MICC / Lipo Plus — metabolism support',
                'L-Carnitine — fat-utilization aid',
                'Amino Blend — recovery support',
                'Glutathione — antioxidant/brightening',
                'Tri-Immune — C + zinc + glutathione',
              ].map(item => (
                <li class="inline-flex items-center gap-2">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none"><path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="md:col-span-7">
            <div class="grid sm:grid-cols-2 gap-4">
              {[
                { title: 'B12 (Methylcobalamin)', url: '/contact-us/', sub: 'Energy & focus support' },
                { title: 'MICC / Lipo Plus', url: '/contact-us/', sub: 'Metabolism & liver support' },
                { title: 'L-Carnitine', url: '/contact-us/', sub: 'Fat-utilization & endurance' },
                { title: 'Amino Blend', url: '/contact-us/', sub: 'Recovery & performance' },
                { title: 'Glutathione', url: '/contact-us/', sub: 'Antioxidant / skin brightening' },
                { title: 'Tri-Immune Boost', url: '/contact-us/', sub: 'Glutathione + Vitamin C + Zinc' },
              ].map(card => (
                <a href={card.url} class="group rounded-2xl bg-white ring-1 ring-neutral-200 p-5 hover:shadow-md hover:-translate-y-0.5 transition">
                  <div class="flex items-center gap-3">
                    <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-neutral-100 ring-1 ring-neutral-200">
                      <svg viewBox="0 0 24 24" class="w-5 h-5" fill="none"><path d="M12 2v6m0 8v6M2 12h6m8 0h6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
                    </span>
                    <div>
                      <h3 class="font-medium text-neutral-900">{card.title}</h3>
                      <p class="mt-1 text-sm text-neutral-600">{card.sub}</p>
                    </div>
                  </div>
                  <div class="mt-3 text-sm underline underline-offset-4 decoration-neutral-300 text-neutral-800 group-hover:decoration-neutral-700">Learn more →</div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-12 sm:py-14 border-t border-neutral-200">
      <div class="container">
        <h2 class="text-xl sm:text-2xl font-semibold tracking-tight">FAQ</h2>
        <div class="mt-6 grid gap-4">
          <details class="group rounded-xl bg-white ring-1 ring-neutral-200 p-5">
            <summary class="list-none cursor-pointer flex items-center justify-between">
              <span class="font-medium text-neutral-900">How often can I get B12 or MICC injections?</span>
              <svg class="w-5 h-5 transition-transform group-open:rotate-180" viewBox="0 0 20 20" fill="currentColor"><path d="M5.8 7.3a1 1 0 011.4 0L10 10.1l2.8-2.8a1 1 0 111.4 1.4l-3.5 3.5a1 1 0 01-1.4 0L5.8 8.7a1 1 0 010-1.4z"/></svg>
            </summary>
            <p class="mt-3 text-neutral-700 text-sm">
              Cadence depends on your baseline and goals. Many clients start weekly or bi-weekly, then
              taper to maintenance. We’ll review your history to recommend a safe interval.
            </p>
          </details>

          <details class="group rounded-xl bg-white ring-1 ring-neutral-200 p-5">
            <summary class="list-none cursor-pointer flex items-center justify-between">
              <span class="font-medium text-neutral-900">Can I combine an IV with a vitamin shot the same day?</span>
              <svg class="w-5 h-5 transition-transform group-open:rotate-180" viewBox="0 0 20 20" fill="currentColor"><path d="M5.8 7.3a1 1 0 011.4 0L10 10.1l2.8-2.8a1 1 0 111.4 1.4l-3.5 3.5a1 1 0 01-1.4 0L5.8 8.7a1 1 0 010-1.4z"/></svg>
            </summary>
            <p class="mt-3 text-neutral-700 text-sm">
              Often yes, when appropriate. We’ll screen for interactions and adjust dosing so the plan
              stays conservative and comfortable.
            </p>
          </details>

          <details class="group rounded-xl bg-white ring-1 ring-neutral-200 p-5">
            <summary class="list-none cursor-pointer flex items-center justify-between">
              <span class="font-medium text-neutral-900">Do I need lab work beforehand?</span>
              <svg class="w-5 h-5 transition-transform group-open:rotate-180" viewBox="0 0 20 20" fill="currentColor"><path d="M5.8 7.3a1 1 0 011.4 0L10 10.1l2.8-2.8a1 1 0 111.4 1.4l-3.5 3.5a1 1 0 01-1.4 0L5.8 8.7a1 1 0 010-1.4z"/></svg>
            </summary>
            <p class="mt-3 text-neutral-700 text-sm">
              Not always. We’ll review medications, conditions and recent labs (if available) and advise
              if additional testing makes sense for you.
            </p>
          </details>

          <p class="text-xs text-neutral-500">
            Wellness services are complementary and not a substitute for diagnosis or treatment. Always consult
            your medical provider with specific questions.
          </p>
        </div>
      </div>
    </section>
  </div>

  <!-- Smooth scroll (gentle easing) -->
  <script is:inline>
    (function () {
      var OFFSET = 24;
      var DURATION = 750;
      function easeInOutCubic(t){ return t<0.5 ? 4*t*t*t : 1 - Math.pow(-2*t+2,3)/2; }
      document.querySelectorAll('a[href^="#"]').forEach(function (a) {
        a.addEventListener('click', function (e) {
          var id = a.getAttribute('href').slice(1);
          var el = document.getElementById(id);
          if (!el) return;
          e.preventDefault();
          var start = window.scrollY || window.pageYOffset;
          var target = el.getBoundingClientRect().top + start - OFFSET;
          var startTime = null;
          function step(ts) {
            if (startTime === null) startTime = ts;
            var elapsed = ts - startTime;
            var p = Math.min(elapsed / DURATION, 1);
            var eased = easeInOutCubic(p);
            window.scrollTo(0, start + (target - start) * eased);
            if (elapsed < DURATION) requestAnimationFrame(step);
          }
          requestAnimationFrame(step);
        });
      });
    })();
  </script>
</BaseLayout>
