---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "What to expect | D\u2011Essence Wellness";
const pageDesc = "From consult to follow\u2011up, we\u2019ll explain each step and timeline in plain language.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-8">
    <div class="container mx-auto px-4 max-w-3xl">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">What to expect</h1>
      <p class="mt-3 text-lg text-neutral-600">From consult to follow‑up, we’ll explain each step and timeline in plain language.</p>
    </div>
  </header>

  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-3xl">
      <article class="mb-8"><h2 class="text-xl font-semibold tracking-tight">Visit flow</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Consultation → personalized plan → treatment (when appropriate) → aftercare & follow‑up.</p></article>
    </div>
  </section>
</SiteLayout>
