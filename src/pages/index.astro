
---
import Base from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import CTA from "../components/CTA.astro";

const mission = "At D-Essence Wellness, our mission is to help you attain your beauty and wellness goals through personalized and expert treatments. We leverage state-of-the-art technology combined with a genuine passion for enhancing your natural beauty, ensuring that you leave our care feeling confident, rejuvenated, and transformed.";
const featured = [
  { title: "Aerolase", href: "/aerolase", description: "Advanced laser therapy for clearer, brighter, healthier-looking skin—minimal downtime."},
  { title: "Microneedling", href: "/microneedling", description: "Stimulate collagen, refine texture, and soften fine lines for a rejuvenated glow."},
  { title: "Neurotoxins", href: "/neurotoxins", description: "Smooth dynamic lines with precision for natural, refreshed expressions."},
];
---
<Base title="D-Essence Wellness | Personalized Beauty & Wellness" description="Beauty & wellness powered by advanced technology. Aerolase, Microneedling, Neurotoxins, and more in a clean, modern studio.">
  <Hero title="Personalized beauty, modern technology, timeless results."
        subtitle={mission}
        chips={["Aerolase","Microneedling","Neurotoxins"]} />
  <section class="container py-10 md:py-14">
    <h2 class="text-2xl md:text-3xl font-bold">Signature Treatments</h2>
    <div class="grid gap-6 md:grid-cols-3 mt-6">
      {featured.map(f => <ServiceCard {...f} />)}
    </div>
  </section>
  <section class="container py-10 md:py-14">
    <h2 class="text-2xl md:text-3xl font-bold">Memberships</h2>
    <p class="text-gray-600 mt-2 max-w-2xl">Unlock consistent care with exclusive perks, preferred pricing, and priority access—designed for your long-term glow.</p>
    <div class="mt-6">
      <a class="btn btn-secondary" href="/memberships">See membership tiers</a>
    </div>
  </section>
  <CTA />
</Base>
