---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/faq', label: 'FAQ' },
  { href: '/about', label: 'About' },
];
---

<header class="site-header sticky top-0 z-50">
  <div class="container h-16 flex items-center">
    <!-- Left: Logo -->
    <div class="flex-1 min-w-0">
      <a href="/" class="flex items-center gap-2 font-semibold tracking-tight">
        <img src="/favicon.svg" alt="D‑Essence Wellness" class="w-8 h-8 rounded-xl" />
        <span class="text-[15px] truncate">D‑Essence Wellness</span>
      </a>
    </div>

    <!-- Center: Desktop Nav -->
    <nav class="hidden lg:flex flex-1 justify-center items-center gap-1 bg-white/5 rounded-full p-1">
      {nav.map((n) => (
        <a href={n.href} class="px-4 h-9 rounded-full inline-flex items-center text-sm hover:bg-white/10 transition">
          {n.label}
        </a>
      ))}
    </nav>

    <!-- Right: Mobile Hamburger -->
    <div class="flex-1 flex justify-end lg:hidden">
      <button class="hamburger" data-hamburger aria-label="Open menu" aria-expanded="false" aria-controls="site-nav">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Panel -->
  <nav id="site-nav" class="mobile-nav lg:hidden">
    <div class="container py-2">
      <div class="flex flex-col gap-1">
        {nav.map((n) => (
          <a href={n.href} class="px-4 h-11 rounded-lg inline-flex items-center text-sm hover:bg-white/10 transition">
            {n.label}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <script src="@/components/nav-hamburger.client.js" type="module" />
</header>