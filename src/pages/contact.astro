---
import PageLayout from '~/layouts/PageLayout.astro';
export const metadata = {
  title: "Contact — D-Essence Wellness",
  description: "Book your consultation or ask a question."
};
---

<PageLayout metadata={metadata}>
  <section class="max-w-screen-xl mx-auto px-6 py-14 grid grid-cols-1 lg:grid-cols-2 gap-10">
    <div>
      <h1 class="text-3xl font-extrabold tracking-tight">Contact</h1>
      <p class="text-muted mt-2">Book an appointment or send us a message. We’ll get back to you shortly.</p>
      <div class="mt-6 rounded-2xl border border-default bg-card p-5">
        <div class="text-sm"><strong>Email:</strong> info@dessencewellness.com</div>
        <div class="text-sm mt-1"><strong>Phone:</strong> (000) 000‑0000</div>
        <div class="text-sm mt-1"><strong>Address:</strong> 123 Wellness Ave, Suite 100</div>
      </div>
    </div>
    <div>
      <form action="https://formspree.io/f/your-form-id" method="POST" class="grid gap-3">
        <input class="rounded-xl border border-default p-3" type="text" name="name" placeholder="Name" required />
        <input class="rounded-xl border border-default p-3" type="email" name="email" placeholder="Email" required />
        <input class="rounded-xl border border-default p-3" type="tel" name="phone" placeholder="Phone" />
        <textarea class="rounded-xl border border-default p-3 min-h-[140px]" name="message" placeholder="How can we help?" required></textarea>
        <button class="inline-flex items-center justify-center px-5 py-3 rounded-full bg-black text-white font-semibold" type="submit">Send</button>
        <input type="hidden" name="_subject" value="New inquiry — D-Essence Wellness" />
      </form>
      <div class="text-xs text-muted mt-2">* You can replace Formspree with your preferred form handler.</div>
    </div>
  
    <div class="mt-10">
      <h2 class="text-xl font-semibold">Schedule online</h2>
      <p class="text-muted text-sm mt-1">Pick a time that works for you. If you prefer, send the form and we’ll coordinate.</p>
      <div class="rounded-2xl border border-default bg-card p-4 mt-3">
        <div class="calendly-inline-widget" data-url="https://calendly.com/your-calendly/consultation" style="min-width:320px;height:680px;"></div>
      </div>
      <script src="https://assets.calendly.com/assets/external/widget.js" async></script>
    </div>
    
</section>
</PageLayout>
