---
import BaseLayout from '@/layouts/BaseLayout.astro';
const seo = {
  title: 'Book Consultation | D‑Essence Wellness',
  description: 'Request your appointment; we’ll confirm availability by phone or email.',
  canonical: '/appointment',
  jsonLd: [{"@context": "https://schema.org", "@type": "WebPage", "name": "Consultation Request", "potentialAction": {"@type": "ReserveAction", "target": {"@type": "EntryPoint", "urlTemplate": "https://example.com/appointment"}, "result": {"@type": "Reservation", "name": "Consultation Request"}}}]
};
const formId = import.meta.env.PUBLIC_FORMSPREE_ID || 'your_form_id_here';
---
<BaseLayout seo={seo}>
  <section class="section">
    <div class="container max-w-2xl">
      <h1 class="text-3xl sm:text-4xl font-display">Book a Consultation</h1>
      <p class="mt-2 text-muted">We’ll review your request and contact you to confirm a time.</p>
      <form action=https://formspree.io/f/{formId} method="POST" class="mt-8 card grid grid-cols-1 gap-4">
        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label class="text-sm">Full Name</label>
            <input required name="name" class="mt-1 w-full border border-line rounded-2xl px-4 h-11" />
          </div>
          <div>
            <label class="text-sm">Phone</label>
            <input required name="phone" class="mt-1 w-full border border-line rounded-2xl px-4 h-11" />
          </div>
        </div>
        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label class="text-sm">Email</label>
            <input required type="email" name="email" class="mt-1 w-full border border-line rounded-2xl px-4 h-11" />
          </div>
          <div>
            <label class="text-sm">Preferred Date</label>
            <input type="date" name="date" class="mt-1 w-full border border-line rounded-2xl px-4 h-11" />
          </div>
        </div>
        <div>
          <label class="text-sm">Interested Services</label>
          <input name="services" placeholder="e.g., Neurotoxins, Microneedling" class="mt-1 w-full border border-line rounded-2xl px-4 h-11" />
        </div>
        <div>
          <label class="text-sm">Notes</label>
          <textarea name="notes" rows="4" class="mt-1 w-full border border-line rounded-2xl px-4 py-3"></textarea>
        </div>
        <input type="hidden" name="form_name" value="consultation_request" />
        <button class="btn btn-primary" type="submit">Submit Request</button>
        <p class="text-xs text-muted">By submitting, you agree to be contacted by phone or email.</p>
      </form>
      <div class="mt-8 text-sm text-muted">
        <p><b>Address:</b> 871 Blooming Grove Turnpike Suite 102, New Windsor, NY 12553</p>
        <p><b>Phone:</b> <a href="tel:+17163038963">(716) 303-8963</a></p>
        <p><b>Hours:</b> Mon–Thu 10am–7pm · Fri–Sat 9am–6pm · Sun Closed</p>
      </div>
    </div>
  </section>
</BaseLayout>
