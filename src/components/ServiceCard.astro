---
import IconService from '@/components/icons/IconService.astro';
const { href = '#', title = '', summary = '', icon = 'star', img = '' } = Astro.props;
---
<a href={href} class="card lift block p-0 overflow-hidden">
  {img && <img src={img} alt={title} loading="lazy" class="w-full h-40 object-cover" />}
  <div class="p-6">
    <div class="flex items-start gap-3">
      <div class="w-11 h-11 rounded-2xl bg-black text-white flex items-center justify-center shrink-0">
        <IconService name={icon} />
      </div>
      <div class="flex-1">
        <h3 class="text-[18px] font-semibold tracking-tight">{title}</h3>
        <p class="text-sm text-muted">{summary}</p>
        <span class="mt-2 inline-flex text-sm">Learn more â†’</span>
      </div>
    </div>
  </div>
</a>

