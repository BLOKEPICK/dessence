---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/faq', label: 'FAQ' },
  { href: '/about', label: 'About' },
];
---
<header class="sticky top-0 z-50 bg-white/80 backdrop-blur supports-backdrop-blur:border-b border-line">
  <div class="container flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-2 font-semibold">
      <img src="/favicon.svg" alt="D-Essence Wellness" class="w-7 h-7 rounded-lg" />
      <span>D-Essence Wellness</span>
    </a>
    <nav class="hidden sm:flex items-center gap-6">
      {nav.map((n) => <a href={n.href} class="hover:opacity-80">{n.label}</a>)}
      <a href="/appointment" class="btn btn-primary">Book Consultation</a>
    </nav>
    <a href="/appointment" class="sm:hidden btn btn-primary text-sm h-9 px-3">Book</a>
  </div>
</header>
