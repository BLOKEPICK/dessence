
---
import Base from "../layouts/BaseLayout.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  "Specialty Treatments",
  "Waxing",
  "Facials",
  "Spider Vein Treatment",
  "Vitamin Injections",
  "Platelet Rich Plasma (PRP)",
  "Nefertiti Neck",
  "Neurotoxins",
  "Skinvive",
  "Skincare",
  "Teeth Whitening",
  "Filler Dissolving",
  "Juvederm Fillers",
  "Smooth PDO Threads",
  "Microneedling",
  "Aerolase",
  "Chemical Peels"
];

const toSlug = (s) => s.toLowerCase().replace(/[^a-z0-9]+/g,'-').replace(/(^-|-$)/g,'');
---
<Base title="All Services | D-Essence Wellness" description="Explore all treatments: Aerolase, Microneedling, Neurotoxins, PRP, Facials, Waxing, and more.">
  <section class="container py-12">
    <h1 class="text-3xl md:text-4xl font-bold">All Services</h1>
    <p class="text-gray-600 mt-2">Discover our complete menu. For tailored plans, book a consultation.</p>
    <div class="grid gap-6 md:grid-cols-3 mt-8">
      {services.map(name => (
        <ServiceCard title={name} href={"/services/"+toSlug(name)} description="Learn what it treats, how it works, and aftercare." />
      ))}
    </div>
  </section>
</Base>
