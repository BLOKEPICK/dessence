---
/**
 * RemoveLegacyCTA.astro
 * - Elimina cualquier bloque antiguo de CTA que contenga el copy
 *   “Ready to begin?” o “no pressure, just clarity.” colocado encima del footer.
 * - Úsalo temporalmente si no encuentras el origen en el layout/página.
 */
---
<script>
  document.addEventListener('DOMContentLoaded', () => {
    try {
      const phrs = [
        'Ready to begin?',
        'no pressure, just clarity'
      ];
      const nodes = Array.from(document.querySelectorAll('section, div, article'));
      for (const el of nodes) {
        const t = (el.textContent || '').toLowerCase();
        if (phrs.some(p => t.toLowerCase().includes(p.toLowerCase()))) {
          if (el.closest('footer')) continue; // no tocar el footer nuevo
          el.remove();
          break;
        }
      }
    } catch (e) {
      console.warn('RemoveLegacyCTA: nothing removed');
    }
  });
</script>
