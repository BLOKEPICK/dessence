---
import BaseLayout from '../../layouts/BaseLayout.astro';
const seo = {"title": "Enzyme Treatments | D‑Essence Wellness", "description": "Gentle, enzyme‑based exfoliation to brighten, smooth, and prep the skin without irritation.", "type": "website", "canonical": "/services/enzyme-treatments", "name": "D‑Essence Wellness"};
---

<BaseLayout seo={seo}>
<section class="relative overflow-hidden bg-neutral-950 text-white">
  <div class="absolute inset-0 -z-10">
    <div class="absolute -top-40 -left-40 h-[520px] w-[520px] rounded-full blur-3xl opacity-60"
         style="background: radial-gradient(circle at center, rgba(59,130,246,.45), transparent 60%);"></div>
    <div class="absolute -bottom-40 -right-20 h-[520px] w-[520px] rounded-full blur-3xl opacity-60"
         style="background: radial-gradient(circle at center, rgba(236,72,153,.35), transparent 60%);"></div>
  </div>
  <div class="container py-16 md:py-24">
    <div class="max-w-3xl">
      <div class="service-hero">
  <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-8">
    <div class="max-w-3xl">
      <div class="flex items-center gap-2">
        <span class="h-2 w-2 rounded-full bg-gradient-to-r from-emerald-400 to-cyan-400"></span>
        <span class="uppercase tracking-[0.20em] text-[11px] font-medium text-neutral-600/80">Treatment</span>
      </div>
      <h1 class="mt-4 text-5xl md:text-7xl font-semibold leading-[1.05] tracking-tight">Enzyme Treatments</h1>
      <p class="mt-4 text-lg md:text-xl muted measure leading-relaxed">Gentle, enzyme‑based exfoliation to brighten, smooth, and prep the skin without irritation.</p>
    </div>
    <div class="md:w-80">
      <div class="rounded-2xl border rule/70 bg-white/40 dark:bg-white/5 backdrop-blur-sm p-4 md:p-5">
        <div class="h-24 w-full rounded-xl bg-gradient-to-br from-emerald-300/40 via-cyan-300/35 to-transparent"></div>
      </div>
    </div>
  </div>
  <div class="mt-8 h-px bg-gradient-to-r from-transparent via-neutral-300/70 dark:via-white/15 to-transparent"></div>
</div>

<div class="mt-6 border-t rule"></div>
      <div class="mt-6">
        <a href="https://na02.patientnow.com/a/dessencewellness/OnlineBooking.aspx" class="inline-flex items-center gap-2 rounded-full bg-white/10 ring-1 ring-white/20 px-4 py-2 text-sm hover:bg-white/15 transition">
          <span>Book consultation</span>
        </a>
      </div>
    </div>
  </div>
</section>
<section class="py-16">
  <div class="container prose prose-neutral max-w-none">
    <slot />
  </div>
</section>
</BaseLayout>
