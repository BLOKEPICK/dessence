---
const { title="Ready to glow?", subtitle="Book your consultation today and step into confident, refreshed skin.", href="/contact" } = Astro.props;
---
<section class="container py-16">
  <div class="rounded-3xl bg-black text-white p-10 md:p-14 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
    <div>
      <h2 class="text-2xl md:text-3xl font-bold">{title}</h2>
      <p class="text-sm text-gray-300 mt-2">{subtitle}</p>
    </div>
    <a href={href} class="btn bg-white text-black hover:opacity-90">Book Now</a>
  </div>
</section>
