---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Fine lines & wrinkles | D\u2011Essence Wellness";
const pageDesc = "Dynamic and static lines benefit from tailored strategies\u2014from neurotoxins to collagen\u2011supporting treatments.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-8">
    <div class="container mx-auto px-4 max-w-3xl">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Fine lines & wrinkles</h1>
      <p class="mt-3 text-lg text-neutral-600">Dynamic and static lines benefit from tailored strategies—from neurotoxins to collagen‑supporting treatments.</p>
    </div>
  </header>

  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-3xl">
      <article class="mb-8"><h2 class="text-xl font-semibold tracking-tight">Typical options</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Neurotoxins for dynamic lines; microneedling and chemical peels to improve texture; skincare with retinoids and peptides.</p></article>
    </div>
  </section>
</SiteLayout>
