---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Forms & policies | D\u2011Essence Wellness";
const pageDesc = "Save time by completing forms ahead of your visit. Review policies to ensure a smooth experience.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="pb-8">
    <div class="container mx-auto px-4 max-w-3xl">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Forms & policies</h1>
      <p class="mt-3 text-lg text-neutral-600">Save time by completing forms ahead of your visit. Review policies to ensure a smooth experience.</p>
    </div>
  </header>

  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-3xl">
      <article class="mb-8"><h2 class="text-xl font-semibold tracking-tight">What you'll find</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Intake forms, consent documents, cancellation policy, and privacy notice.</p></article>
    </div>
  </section>
</SiteLayout>
