---
import SiteLayout from "@/layouts/SiteLayout.astro";
const pageTitle = "Texture & pores | D\u2011Essence Wellness";
const pageDesc = "Support smoother texture and refined pore appearance with resurfacing and collagen stimulation.";
---
<SiteLayout title={pageTitle} description={pageDesc}>
  <header class="border-b border-neutral-200/60">
    <div class="max-w-screen-xl mx-auto px-4 py-10 md:py-12">
      <p class="text-sm tracking-wide uppercase text-neutral-500">Info</p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight">Texture & pores</h1>
      <p class="mt-3 text-lg text-neutral-600 max-w-3xl">Support smoother texture and refined pore appearance with resurfacing and collagen stimulation.</p>
    </div>
  </header>

  <section>
    <div class="max-w-screen-xl mx-auto px-4 py-12 md:py-16">
      <div class="max-w-3xl">
        <article class="mb-10"><h2 class="text-xl font-semibold tracking-tight">Typical options</h2><p class="mt-3 text-[16px] leading-7 text-neutral-700">Microneedling, chemical peels, and skincare actives like retinoids and acids.</p></article>
      </div>
    </div>
  </section>
</SiteLayout>
