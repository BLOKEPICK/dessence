---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/faq', label: 'FAQ' },
  { href: '/about', label: 'About' },
];
---
<header class="sticky top-0 z-50 bg-white/70 backdrop-blur-md border-b border-black/[0.06]">
  <div class="container h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-semibold tracking-tight">
      <img src="/favicon.svg" alt="D-Essence Wellness" class="w-8 h-8 rounded-xl" />
      <span class="text-[15px]">D-Essence Wellness</span>
    </a>
    <nav class="hidden md:flex items-center gap-2 bg-black/[.04] rounded-full p-1">
      {nav.map((n) => (
        <a href={n.href} class="px-4 h-9 rounded-full flex items-center text-sm hover:bg-white transition">{n.label}</a>
      ))}
    </nav>
    <a href="/appointment" class="btn btn-primary text-sm">Book</a>
  </div>
</header>
