---
import BaseLayout from '../../../layouts/BaseLayout.astro';
const seo = {"title": "Waxing — Body | D‑Essence Wellness", "description": "Professional body waxing performed with gentle technique and careful skin prep.", "type": "website", "canonical": "/services/waxing/body", "name": "D‑Essence Wellness"};
---



<BaseLayout {...seo}>
<div class="px-6 pt-28 md:pt-32 pb-10">
    <div class="mx-auto max-w-4xl">
      <p class="text-xs tracking-wider uppercase muted">Service</p>
      <h1 class="font-semibold leading-[1.05] md:text-6xl mt-2 text-[2.75rem] text-center tracking-tight">Waxing — Body</h1>
<div class="mx-auto mt-8 h-px w-48 md:w-64 bg-gradient-to-r from-transparent via-black to-transparent"></div>



      
      
    </div>

<section class="relative overflow-hidden bg-neutral-950 text-white">
  <div class="absolute inset-0 -z-10">
    <div class="absolute -top-40 -left-40 h-[520px] w-[520px] rounded-full blur-3xl opacity-60"
         style="background: radial-gradient(circle at center, rgba(59,130,246,.45), transparent 60%);"></div>
    <div class="absolute -bottom-40 -right-20 h-[520px] w-[520px] rounded-full blur-3xl opacity-60"
         style="background: radial-gradient(circle at center, rgba(236,72,153,.35), transparent 60%);"></div>
  </div>
  <div class="container py-16 md:py-24">
    <div class="max-w-3xl">
      <span class="inline-flex items-center gap-2 rounded-full bg-white/10 ring-1 ring-white/20 px-3 py-1 text-xs tracking-wide uppercase">Treatment</span>
      
      <p class="mt-4 text-lg text-neutral-300">Professional body waxing performed with gentle technique and careful skin prep.</p>
      <div class="mt-6">
        <a href="https://na02.patientnow.com/a/dessencewellness/OnlineBooking.aspx" class="inline-flex items-center gap-2 rounded-full bg-white/10 ring-1 ring-white/20 px-4 py-2 text-sm hover:bg-white/15 transition">
          <span>Book consultation</span>
        </a>
      </div>
    </div>
  </div>
</section>
<section class="py-16">
  <div class="container prose prose-neutral max-w-none">
    <slot />
  </div>
</section>

</BaseLayout>
